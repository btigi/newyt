@page
@model newyt.web.Pages.AddChannelModel
@{
    ViewData["Title"] = "Add Channel";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Add New YouTube Channel</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @Model.SuccessMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="ChannelInput" class="form-label">Channel Name, URL, or ID:</label>
                            <input asp-for="ChannelInput" class="form-control" placeholder="Lana Del Rey, @@lanadelrey, or UCqk3CdGN_j8IR9z4uBbVPSg">
                            <div class="form-text">
                                Enter any of the following:
                                <br><strong>Channel Name:</strong> "Lana Del Rey" (we'll try to find it automatically)
                                <br><strong>YouTube URL:</strong> youtube.com/@@lanadelrey or youtube.com/c/lanadelrey
                                <br><strong>Channel ID:</strong> UCqk3CdGN_j8IR9z4uBbVPSg (starts with UC)
                            </div>
                            <span asp-validation-for="ChannelInput" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Channel</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="mt-3 text-center">
                <a asp-page="/Index" class="btn btn-outline-secondary">Back to Unwatched Videos</a>
            </div>
        </div>
    </div>
</div>